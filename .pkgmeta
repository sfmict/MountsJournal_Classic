package-as: MountsJournal

externals:
	MountsJournal/libs/LibStub: https://repos.curseforge.com/wow/libstub/trunk
	MountsJournal/libs/LibThingsLoad:
		site: https://www.curseforge.com/wow/addons/libthingsload
		url: https://github.com/sfmict/LibThingsLoad
		tag: latest
	MountsJournal/libs/LibSerialize:
		url: https://github.com/rossnichols/LibSerialize
		tag: latest
	MountsJournal/libs/LibDeflate:
		site: https://www.curseforge.com/wow/addons/libdeflate
		url: https://github.com/SafeteeWoW/LibDeflate
	MountsJournal/libs/AceComm-3.0: https://repos.curseforge.com/wow/ace3/trunk/AceComm-3.0
	MountsJournal/libs/CallbackHandler-1.0: https://repos.curseforge.com/wow/callbackhandler/trunk/CallbackHandler-1.0
	MountsJournal/libs/LibDataBroker-1.1:
		site: https://www.curseforge.com/wow/addons/libdatabroker-1-1
		url: https://github.com/tekkub/libdatabroker-1-1
	libs/LibDBIcon-1.0: https://repos.curseforge.com/wow/libdbicon-1-0/trunk/LibDBIcon-1.0
	MountsJournalUI/libs/LibSFDropDown:
		site: https://www.curseforge.com/wow/addons/libsfdropdown
		url: https://github.com/sfmict/LibSFDropDown
		tag: latest

enable-nolib-creation: no

ignore:
	- _test\.lua
	- .*\.md$
	- libs/.*\.toc$
	- libs/LibStub/tests
	- libs/LibDataBroker-1\.1/README\.textile
	- libs/LibDBIcon-1\.0/lib\.xml
	- libs/LibSerialize/archive
	- libs/LibSerialize/buildreadme.lua
	- libs/LibSerialize/tests.lua
	- libs/LibDeflate/docs
	- libs/LibDeflate/examples
	- libs/LibDeflate/dev_docs
	- libs/LibDeflate/rockspecs
	- libs/LibDeflate/tests
	- libs/LibDeflate/tools

move-folders:
	MountsJournal/MountsJournal: MountsJournal
	MountsJournal/MountsJournalUI: MountsJournalUI